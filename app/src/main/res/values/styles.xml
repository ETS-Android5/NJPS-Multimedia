<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#398F5B</item>
        <item name="colorPrimaryDark">#28804D</item>
        <item name="colorAccent">#256646</item>
        <item name="bkmrk_history_txt_color">#9E4B4A4A</item>
        <item name="loader_txt_color">#FCFBFB</item>
        <item name="bk_hs_txt_c">#3C3B3B</item>
        <item name="profile_txt_c">#FAF3F3</item>
        <item name="progress_txt">#245E81</item>
        <item name="toolbr_bak">#FFFFFF</item>
         <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


      <style name="MyThemeNoActionbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="EditTextTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimaryDark">#0288D1</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#FFCC00</item>
        <item name="colorAccent">#4fa881</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TranslucentBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#FFCC00</item>
        <item name="colorAccent">#4fa881</item>
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="NjpollobDark" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">#8A8888</item>
        <item name="colorPrimaryDark">#171817</item>
        <item name="colorAccent">#212222</item>
        <item name="bkmrk_history_txt_color">#9E4B4A4A</item>
        <item name="loader_txt_color">#FCFBFB</item>
        <item name="bk_hs_txt_c">#3C3B3B</item>
        <item name="profile_txt_c">#141414</item>
        <item name="progress_txt">#141414</item>
        <item name="toolbr_bak">#464545</item>

    </style>
    
    <style name="NjpollobDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    

    <style name="NjpollobDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NjpollobDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


  <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="NJPSProgressBarRectangle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_drawable</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">200dp</item>
    </style>



</resources>
